<%= form_with(model: [:admin, @product]) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <% if @product.errors[:title].any? %>
      <div class="text-danger">
        <%= @product.errors[:title].first %>
      </div>
    <% end %>  
  </div>

  <div class="form-group mb-3">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
    <% if @product.errors[:price].any? %>
      <div class="text-danger">
        <%= @product.errors[:price].first %>
      </div>
    <% end %>  
  </div>

  <div class="form-group mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control textarea' %>
    <% if @product.errors[:description].any? %>
      <div class="text-danger">
        <%= @product.errors[:description].first %>
      </div>
    <% end %>  
  </div>

  <div class="form-group mb-3">
    <%= f.label :status %>
    <%= f.select :status, Product.statuses.keys, class: 'form-control' %> 
  </div>

  <div class="actions text-center mt-3">
    <%= f.submit 'Submit', class: 'btn btn-primary gap-2 col-6 mx-auto' %>
  </div>
  <div class="actions mt-5">
    <%= link_to "Back", admin_products_path, class: 'btn btn-primary' %>
  </div>
<% end %>
