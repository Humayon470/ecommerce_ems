<%= form_with(model: [:admin, @product], local: true) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
    <span class="text-danger">
      <%= @product.errors[:title].to_sentence %>
    </span>
  </div>

  <div class="form-group mb-3">
    <%= f.label :price %>
    <%= f.text_field :price, class: 'form-control' %>
    <span class="text-danger">
      <%= @product.errors[:price].to_sentence %>
    </span>
  </div>

  <div class="form-group mb-3">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control textarea' %>
    <span class="text-danger">
      <%= @product.errors[:description].to_sentence %>
    </span>
  </div>

  <div class="form-group mb-3">
    <%= f.label :status %>
    <%= f.select :status, Product.statuses.keys, class: 'form-control' %> 
  </div>

  <div class="form-group mb-3">
    <%= f.label :category_id, "Category" %>
    <%= f.collection_select :category_id, categories, :id, :name %>
  </div>

  <div class="form-group mb-3">
    <%= f.label :product_img %>
    <%= f.file_field :product_img%> 
  </div>

  <div class="actions text-center mt-3">
    <%= f.submit 'Submit', class: 'btn btn-primary gap-2 col-6 mx-auto' %>
  </div>
  <div class="actions mt-5">
    <%= link_to "Back", admin_products_path, class: 'btn btn-primary' %>
  </div>
<% end %>
