<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">
        <%= link_to admin_products_path(sort: "id", direction: sort_direction("id")) do %>
          ID
        <% end %>
      </th>      
      <th scope="col">
        <%= link_to admin_products_path(sort: "id", direction: sort_direction("id")) do %>
          Title
        <% end %>
      </th>       
      <th scope="col">
        <%= link_to admin_products_path(sort: "id", direction: sort_direction("id")) do %>
          Price
        <% end %>
      </th> 
      <th scope="col">
        <%= link_to admin_products_path(sort: "id", direction: sort_direction("id")) do %>
          Status
        <% end %>
      </th> 
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% products.each do |product| %>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.status %></td>
        <td>
          <%= link_to edit_admin_product_path(product), class: 'btn btn-warning btn-sm' do %>
            Edit
          <% end %>
          <%= link_to admin_product_path(product), class: 'btn btn-info btn-sm' do %>
            Show
          <% end %>
          <%= link_to admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', remote: true do %>
            Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<hr>

