<table class="table table-bordered">
  <thead>
    <tr>
      <th scope="col">
        <%= link_to admin_categories_path(sort: "id", direction: sort_direction("id")) do %>
          ID
        <% end %>
      </th>      
      <th scope="col">
        <%= link_to admin_categories_path(sort: "id", direction: sort_direction("id")) do %>
          Name
        <% end %>
      </th>  
      <th scope="col">
        <%= link_to admin_categories_path(sort: "id", direction: sort_direction("id")) do %>
          Availability
        <% end %>
      </th>       
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% categories.each do |category| %>
        <td><%= category.id %></td>
        <td><%= category.name.capitalize %></td>
        <td><%= category.availability %></td>
        <td>
          <%= link_to edit_admin_category_path(category), class: 'btn btn-warning btn-sm' do %>
            <i class="fas fa-edit"></i> Edit
          <% end %>
          <%= link_to admin_category_path(category), class: 'btn btn-info btn-sm' do %>
            <i class="fas fa-eye"></i> Show
          <% end %>
          <%= link_to admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm', remote: true do %>
            <i class="fas fa-trash-alt"></i> Delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>