<div class="new-form mt-5">
  <h2 class="mb-4 text-center">Edit Your Profile</h2>
  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>

    <div class="row justify-content-center">
      <div class="col-md-4">
        <% if f.object.class.require_password_on_accepting %>
          <div class="form-group mb-3">
            <%= f.label :email, class: 'mb-2' %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :name, class: 'col-md-3 col-form-label text-right' %>
            <%= f.text_field :name, autofocus: true, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password, class: 'col-md-3 col-form-label text-right' %>
            <%= f.password_field :password, class: 'form-control' %>
          </div>

          <div class="form-group mb-3">
            <%= f.label :password_confirmation, class: 'col-form-label' %>
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        <% end %>

        <div class="form-group text-center">
          <%= f.submit "Set my profile", class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
