<section class="h-100" style="background-color: #eee;">
  <div class="container h-100 py-5">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-10">

        <div class="d-flex justify-content-between align-items-center mb-4">
          <h3 class="fw-normal mb-0 text-black">Shopping Cart</h3>
        </div>

        <% if @products.present? %>
          <% @products.each do |product| %>
          <div class="card rounded-3 mb-4">
            <div class="card-body p-4">
              <div class="row align-items-center">
                <div class="col-md-3">
                  <%= image_tag product.product_img, size: '150x100'%>
                </div>
                <div class="col-md-3">
                  <p class="lead fw-normal mb-2"><%= product.title %></p>
                </div>
                <div class="col-md-3">
                  <p><span class="text-muted">Product Price</span></p>
                  <h5><%= product.price %></h5>
                </div>
                <div class="col-md-3">
                  <%= link_to cart_path(@cart, product_id: product.id), method: :delete, data: { confirm: 'Are you sure?' } do %>
                  <i class="bi bi-trash h3"></i>
                  <% end %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        <% else %>
          <p>Your cart is empty.</p>
        <% end %>
        <%= link_to "Proceed to checkout", edit_cart_path(@cart), class: "btn btn-warning btn-block btn-lg" %>
      </div>
    </div>
    </div>
  </div>
</section>
