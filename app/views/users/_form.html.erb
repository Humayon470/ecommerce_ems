<!-- app/views/users/index.html.erb -->
<div class="user-form col-sm-6">
  <table class="table table-bordered" style="margin-left: 270px; width: 165%;">
    <thead>
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Role</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name %></td>
          <td><%= user.email %></td>
          <td><%= user.role %></td>
          <td>
            <%= link_to edit_user_path(user), class: 'btn btn-warning btn-sm' do %>
              <i class="fas fa-edit"></i> Edit
            <% end %>
            <%= link_to user_path(user), class: 'btn btn-info btn-sm' do %>
              <i class="fas fa-eye"></i> Show
            <% end %>
            <%= link_to user_path(user), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' do %>
              <i class="fas fa-trash-alt"></i> Delete
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
