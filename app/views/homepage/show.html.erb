<div class="container mt-5">
  <h1>Product Details</h1>
  <hr>

  <div class="row">
    <div class="col-md-6">
      <h3>Product Name:</h3>
      <p><%= @product.title %></p>
      <h3>Price:</h3>
      <p><%= @product.price %></p>
      <h3>Description:</h3>
      <p><%= @product.description %></p>
      <h3>Status:</h3>
      <p><%= @product.status %></p>
      <h3>Category:</h3>
      <p><%= @product.category.name %></p>
    </div>
    <div class="col-md-6 mt-3">
      <%= image_tag @product.product_img ,  size: '400x300'%>
    </div>
  </div>
  <hr>
  <div class="actions mt-5">
    <%= link_to "Back", root_path, class: 'btn btn-primary'%>
  </div>
</div>